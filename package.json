{
  "name": "app",
  "version": "1.0.0",
  "description": "An Electron Typescript boilerplate",
  "scripts": {
    "get": "yarn",
    "get-cpx":"npm i cpx --global",
    "cp": "cpx src/views/*.{html,png,jpg} dist/views/",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron ./dist/main.js"
  },
  "repository": "https://github.com/felipetesc/tsElectron-Boilerplate",
  "keywords": [
    "Electron",
    "typescript",
    "boilerplate"
  ],
  "author": "felipetesc",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "12.12.6",
    "electron": "~9.2.0",
    "tslint": "~6.1.3",
    "typescript": "~3.9.7"
  }
}
